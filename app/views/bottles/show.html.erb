<div class="scroller">
		<div class="informations">
			<h1><%= @bottle.name %></h1>
		</div>
		<div class="informations">
			<h2><%= @bottle.vineyard %></h2>
		</div>
		<div class="informations">
			<h2><%= @bottle.year %></h2>
		</div>
		<div class="image-show">
			<%= image_tag "https://images.vivino.com/thumbs/d45NbXIqTrOY7GyHkW7iyw_pb_x600.png", alt: "#{@bottle.name}" %>
		</div>
		<div class="informations">
			<p><%= @bottle.description %></p>
		</div>
		<div class="informations">
			<p><%= @bottle.preservation_advice %></p>
			<p><%= "La bouteille sera à son appogée en : #{@bottle.year + 10}" %></p>
		</div>
		<div>
			<h3>Région : <%= @bottle.region.name %> - Cépages : <%= @bottle.grape.name %></h3>
		</div>
	</div>