<section class="bottle-show">
    <div class="bottle-title ">
			<h1><%= @bottle.name %></h1>
			<h2><%= @bottle.vineyard %></h2>
			<h3><%= @bottle.year %></h3>
    </div>
		<div class="image-show-bottle">
      <img src="<%=@bottle.image%>" alt="">
      <span class="year-overview"><%= @bottle.year %></span>
		</div>
			<p><%= @bottle.description %></p>
		</div>
		<div class="informations-bottle">
			<p><%= "La bouteille sera à son appogée en : #{@bottle.year + 10}" %></p>
			<p>Température idéale pour la conservation: <br><%= @bottle.preservation_advice %></p>
		</div>
		<div class="informations-bottle">
			<h3>Région : <%= @bottle.region.name %> - Cépages : <%= @bottle.grape.name %></h3>
		</div>
</section>